<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.taobao.mapper.AdminMapper">

    <!-- 获取用户总数 -->
    <select id="getTodayNewUserCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM user
    </select>

    <!-- 获取总交易额 -->
    <select id="getTodayTransactionAmount" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(total_amount), 0)
        FROM orders
        WHERE status IN ('paid', 'shipped', 'completed')
    </select>

    <!-- 获取总订单数 -->
    <select id="getTodayNewOrderCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM orders
    </select>

    <!-- 获取总完成订单数 -->
    <select id="getTodayCompletedOrderCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM orders
        WHERE status = 'completed'
    </select>

    <!-- 订单结果映射 -->
    <resultMap id="OrdersResultMap" type="org.taobao.pojo.Orders">
        <id column="order_id" property="orderId" />
        <result column="order_no" property="orderNo" />
        <result column="user_id" property="userId" />
        <result column="total_amount" property="totalAmount" />
        <result column="status" property="status" />
        <result column="shipping_address" property="shippingAddress" />
        <result column="consignee_name" property="consigneeName" />
        <result column="phone" property="phone" />
        <result column="payment_time" property="paymentTime" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 管理员获取订单列表 -->
    <select id="getAdminOrderList" resultMap="OrdersResultMap" parameterType="org.taobao.dto.OrderQueryDTO">
        SELECT
            order_id,
            order_no,
            user_id,
            total_amount,
            status,
            shipping_address,
            payment_time,
            create_time,
            update_time
        FROM orders
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="orderStatus != null and orderStatus != ''">
                AND status = #{orderStatus}
            </if>
            <if test="orderNo != null and orderNo != ''">
                AND order_no LIKE CONCAT('%', #{orderNo}, '%')
            </if>
            <if test="startDate != null and startDate != ''">
                AND create_time &gt;= #{startDate}
            </if>
            <if test="endDate != null and endDate != ''">
                AND create_time &lt;= #{endDate}
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 管理员获取订单总数 -->
    <select id="getAdminOrderCount" resultType="java.lang.Integer" parameterType="org.taobao.dto.OrderQueryDTO">
        SELECT COUNT(*)
        FROM orders
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="orderStatus != null and orderStatus != ''">
                AND status = #{orderStatus}
            </if>
            <if test="orderNo != null and orderNo != ''">
                AND order_no LIKE CONCAT('%', #{orderNo}, '%')
            </if>
            <if test="startDate != null and startDate != ''">
                AND create_time &gt;= #{startDate}
            </if>
            <if test="endDate != null and endDate != ''">
                AND create_time &lt;= #{endDate}
            </if>
        </where>
    </select>

</mapper>